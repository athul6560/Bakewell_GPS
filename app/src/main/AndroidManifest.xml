<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.acb.bakewellgps">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:hardwareAccelerated="true"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BakewellGPS"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".ui.Activities.addNewShopPage.AddNewShopActivity"
            android:exported="false" />
        <activity
            android:name=".ui.Activities.EditPage.EditActivity"
            android:exported="false" />
        <activity
            android:name=".ui.Activities.ShopViewPage.ShopViewActivity"
            android:exported="false" />
        <activity
            android:name=".ui.Activities.ShopListPage.ShopListActivity"
            android:exported="false" />
        <activity
            android:name=".ui.Activities.DashboardPage.Dashboard"
            android:exported="false" />
        <activity
            android:name=".ui.Activities.LoginPage.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>